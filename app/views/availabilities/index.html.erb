<div class="trans85 bord-rad-5 bg-cs pad-5-25 wid-55 marg-lr center">
	<% if @no_matches %>
		<h4 class="outlined-text">There are no available pairs on these topics at this time.</h4>
	<% end %>
	<% @possible_availability_matches.each do |avail| %>
	<table class="center marg-lr">
		<tr>
			<td>


				Username: <span class="strong"><b><%= user_helper(avail).handle %> </span>-</b>&nbsp;
				Date: <span class="strong"><b><%= avail_date(avail).strftime("%a %b %d @ %l%P") %> </span></b>
				</br>
				Topic: <b class="strong"><%= topic_helper(avail).title %> &nbsp;</span>

				&nbsp;
			</td>

			<td>
				<%= form_for :availability, :url => group_potential_pairs_path(@group, :user_id => user_helper(avail).id, :time => hour_helper(avail), :avail => avail.id, :accepted => true), :html => { :method => :post } do |f| %>
				<%= f.submit "Select Pair", class: "btn btn-primary btn-marg-5"	 %>
				<% end %>
			</td>
			<td>
				<%= form_for :availability, :url => group_potential_pairs_path(@group,  :user_id => user_helper(avail).id, :time => hour_helper(avail), :avail => avail.id, :accepted => false), :html => { :method => :post } do |f| %>
				<%= f.submit "Skip", class: "btn btn-primary btn-marg-5" %>
				<% end %>
			</td>
		</tr>

		<% end %>
	</table>
</div>
