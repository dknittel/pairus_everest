<div class="trans85 bord-rad-5 bg-cs pad-5-25 wid-55 marg-lr center">
	<span class="title"> My Groups </span>
	<p></p>
	<% if @groups %>
		<% @groups.each do |group| %>
			<a href="groups/<%= group.id %>"><%= group.name %></a>
			</br>
		<% end %>
	<% end %>
	<p></p>
	<%= link_to 'Create New Group', new_group_path, class: "btn btn-primary btn-btm-marg", id: "create-group-button" %>
</div>
<div class="currentSchedule trans85 bord-rad-5 bg-cs wid-55 marg-lr center">
	<span class="title marg-l-25">Available Times:</span>
	<ul>
		<% current_user.hours.each do |day| %>
   <%= thedate(day).strftime("%a %b %d at %l%P") %>
   <%= link_to "Delete", hour_path(day), method: :delete, data: {confirm: 'Confirm Delete?'} %>
 </br>
  <% end %>
  </ul>
</div>

